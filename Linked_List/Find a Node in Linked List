#     return findNode(head.next,n,pos+1)
   
    
    #using loop
def findNode(head,n):
    count =0
    tmp = head
    while tmp:
        if tmp.data == n:
            return count
        count +=1
        tmp = tmp.next
    else:
        return -1
    
